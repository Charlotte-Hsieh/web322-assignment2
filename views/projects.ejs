<!DOCTYPE html>
<html lang="en" data-theme="retro">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects - Climate Solutions</title>
  <link rel="stylesheet" href="/css/main.css">
</head>

<body>
  <%- include('partials/navbar') %>

  <div class="container mx-auto px-4 py-10">

    <h1 class="text-4xl font-bold mb-6">Projects</h1>

    <% if (sector) { %>
      <p class="mb-6 text-lg italic">
        Showing results for sector: <span class="font-bold"><%= sector %></span>
      </p>
    <% } %>

    <div class="hero bg-base-200 rounded-lg mb-10 py-10">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <h2 class="text-3xl font-bold mb-4">Browse by Sector</h2>

          <div class="flex flex-wrap gap-2 justify-center">
            <a href="/solutions/projects?sector=Land Sinks" class="btn btn-sm">Land Sinks</a>
            <a href="/solutions/projects?sector=Industry" class="btn btn-sm">Industry</a>
            <a href="/solutions/projects?sector=Transportation" class="btn btn-sm">Transportation</a>
            <a href="/solutions/projects?sector=Electricity" class="btn btn-sm">Electricity</a>
            <a href="/solutions/projects?sector=Food, Agriculture, and Land Use" class="btn btn-sm">
              Food, Agriculture, and Land Use
            </a>
          </div>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto">
      <table class="table table-zebra w-full bg-base-100 rounded-lg">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <td class="font-semibold"><%= project.title %></td>

              <td>
                <a href="/solutions/projects?sector=<%= project.sector %>" class="link link-primary">
                  <%= project.sector %>
                </a>
              </td>

              <td><%= project.summary_short %></td>

              <td>
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-secondary btn-sm">
                  Details
                </a>
              </td>
            </tr>
          <% }) %>
        </tbody>

      </table>
    </div>

  </div>

</body>
</html>
