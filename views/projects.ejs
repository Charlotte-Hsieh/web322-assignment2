<!DOCTYPE html>
<html lang="en" data-theme="dim">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Projects - Climate Solutions</title>
  <link rel="stylesheet" href="/css/main.css">
</head>
<body>
  <%- include('partials/navbar') %>
  
  <div class="container mx-auto px-4 py-8">
    <div class="hero bg-base-200 rounded-lg mb-8 py-12">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <h1 class="text-5xl font-bold mb-4">Projects</h1>
          <p class="mb-6">Browse climate solutions by sector:</p>
          <div class="flex flex-wrap gap-2 justify-center">
            <a href="/solutions/projects?sector=Land Sinks" class="btn btn-sm">Land Sinks</a>
            <a href="/solutions/projects?sector=Industry" class="btn btn-sm">Industry</a>
            <a href="/solutions/projects?sector=Transportation" class="btn btn-sm">Transportation</a>
            <a href="/solutions/projects?sector=Electricity" class="btn btn-sm">Electricity</a>
            <a href="/solutions/projects?sector=Food, Agriculture, and Land Use" class="btn btn-sm">Food, Agriculture, and Land Use</a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="overflow-x-auto">
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <td><%= project.title %></td>
              <td>
                <a href="/solutions/projects?sector=<%= project.sector %>" class="btn btn-sm btn-outline"><%= project.sector %></a>
              </td>
              <td><%= project.summary_short %></td>
              <td>
                <a href="/solutions/projects/<%= project.id %>" class="btn btn-sm btn-primary">Details</a>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>